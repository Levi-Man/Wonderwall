<div class="col-md-5 card bg-white">
  <h2>Artist Info</h2>
  {{#if artists}}
  <div class="row mb-4 artist">
    <div class="col-md-12">
      <h2 id="artistName" >{{artist.name}}</h2>
      <p id="artistCountry">{{artist.country}}</p>
      <p id="artistLifespan">{{artist.life-span.name}}</p>

    </div>
  </div>
  {{else}}
  <h2><p id="artistName">No Artist Searched.</p></h2>
  <p id="artistCountry"></p>
  <p id="artistLifespan"></p>
  {{/if}}


  {{#if artist.albums.length}}
  <h3>Albums:</h3>
  <ul>
    {{#each artist.albums as |album|}}
    <li>{{album.title}} (Release Date: {{album.releaseDate}})</li>

    {{/each}}
  </ul>
  {{else}}
  <p>No artist searched.</p>
  {{/if}}



  <!-- Slideshow container -->
  <div class="slideshow-container">

    <!-- Full-width images with number and caption text -->
    <div class="mySlides">
      <div class="numbertext">1 / 3</div>
      <img src="https://coverartarchive.org/release-group/cc7e6348-cc55-31fa-aeb2-748a46a81cb3/front"
        style="width:100%">
      <div class="text"></div>
    </div>

    <div class="mySlides">
      <div class="numbertext">2 / 3</div>
      <img src="https://coverartarchive.org/release/7d166a44-cfb5-4b08-aacb-6863bbe677d6/1247101964.jpg"
        style="width:100%">
      <div class="text"></div>
    </div>

    <div class="mySlides">
      <div class="numbertext">3 / 3</div>
      <img src="https://coverartarchive.org/release-group/fb43ac3a-8d28-3686-8653-bbf15a5e4389/front"
        style="width:100%">
      <div class="text"></div>
    </div>

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
  </div>
  <br>

</div>